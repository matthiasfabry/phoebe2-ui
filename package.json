{
  "name": "PHOEBE",
  "author": "PHOEBE development team",
  "contributors": "Kyle Conroy",
  "description": "Eclipsing Binary Modeling Software",
  "version": "0.1.0",
  "license": "GPL v3",
  "repository": {
  "type" : "git",
  "url" : "https://github.com/phoebe-project/phoebe2-ui.git"
  },
  "private": true,
  "devDependencies": {
    "electron": "1.8.8",
    "electron-installer-debian": "^1.0.0",
    "electron-installer-dmg": "^2.0.0",
    "electron-installer-redhat": "^0.5.0",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "13.0.0",
    "foreman": "3.0.0",
    "react-scripts": "0.8.5",
    "replace-in-file": "^6.1.0"
  },
  "dependencies": {
    "abortcontroller-polyfill": "1.2.1",
    "array-move": "2.1.0",
    "babel-polyfill": "6.26.0",
    "electron-fetch": "1.3.0",
    "is-electron": "2.2.0",
    "lodash.clonedeep": "4.5.0",
    "papaparse": "5.0.2",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-flip-move": "3.0.3",
    "react-panelgroup": "1.0.7",
    "react-query-params": "1.0.9",
    "react-router-dom": "4.3.1",
    "react-select": "3.0.4",
    "react-sortable-hoc": "1.9.1",
    "react-toastify": "5.3.1",
    "react-toggle-button": "2.2.0",
    "semver-compare": "1.0.0",
    "socket.io-client": "2.2.0",
    "whatwg-fetch": "3.0.0"
  },
  "homepage": "http://ui.phoebe-project.org",
  "main": "build/electron-starter.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "build:electron": "npm run build && replace-in-file '/href=\"//g' 'href=\"./' build/index.html --isRegex && replace-in-file '/src=\"//g' 'src=\"./' build/index.html --isRegex && cp ./src/electron*.js ./build/ && cp -R ./src/icons ./build/",
    "package:all": "npm run build:electron && electron-packager . --all --out=dist --overwrite --ignore=dist --ignore=src --ignore=public",
    "package": "npm run build:electron && electron-packager . --out=dist --overwrite --ignore=dist --ignore=src --ignore=public",
    "package:installer:all": "npm run package:installer:deb64 && npm run package:installer:rpm64 && npm run package:installer:dmg64 && npm run package:installer:exe64 && npm run package:installer:exe32",
    "package:installer:deb64": "electron-installer-debian --src dist/PHOEBE-linux-x64/ --dest dist/installers/ --arch amd64 --icon=public/logos/phoebe2.svg",
    "package:installer:rpm64": "electron-installer-redhat --src dist/PHOEBE-linux-x64/ --dest dist/installers/ --arch x86_64 --icon=public/logos/phoebe2.svg",
    "package:installer:dmg64": "electron-installer-dmg ./dist/PHOEBE-darwin-x64/PHOEBE.app FooBar --out dist/installers/ --icon=public/logos/phoebe2.svg --overwrite",
    "package:installer:exe64": "electron-installer-windows --src dist/PHOEBE-win32-x64/ --dest dist/installers/",
    "package:installer:exe32": "electron-installer-windows --src dist/PHOEBE-win32-ia32/ --dest dist/installers/"
  }
}
