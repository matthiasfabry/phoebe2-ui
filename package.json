{
  "name": "phoebe",
  "author": "PHOEBE development team",
  "contributors": [
    "Kyle Conroy"
  ],
  "description": "Eclipsing Binary Modeling Software",
  "version": "1.0.1",
  "license": "GPL v3",
  "repository": {
    "type": "git",
    "url": "https://github.com/phoebe-project/phoebe2-ui.git"
  },
  "private": true,
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-installer-debian": "^3.2.0",
    "electron-installer-dmg": "^5.0.1",
    "electron-installer-redhat": "^3.4.0",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^17.1.2",
    "react-scripts": "^5.0.1",
    "replace-in-file": "^6.1.0",
    "foreman": "3.0.1"
  },
  "dependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-select": "^5.8.0",
    "react-toastify": "^9.0.0",
    "react-flip-move": "^3.0.5",
    "@dnd-kit/utilities": "^3.2.2",
    "@dnd-kit/sortable": "^8.0.0",
    "@asphalt-react/toggle-button": "^2.0.0-rc.0",
    "electron-fetch": "^1.9.1",
    "electron-prompt": "^1.7.0",
    "socket.io-client": "^4.7.5",
    "is-electron": "^2.2.2",
    "history": "^5.3.0",
    "abortcontroller-polyfill": "^1.7.5",
    "papaparse": "^5.4.1",
    "semver-compare": "^1.0.0",
    "yargs": "^17.7.2",
    "whatwg-fetch": "^3.6.20",
    "rsuite": "^5.70.1"
  },
  "homepage": "http://ui.phoebe-project.org",
  "main": "build/electron-starter.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "electron": "electron .",
    "dev": "npm run build:electron && nf start -p 3000",
    "build:electron": "npm run build && cp build/index.html build/index_static.html && replace-in-file '/href=\"//g' 'href=\"./' build/index.html --isRegex && replace-in-file '/src=\"//g' 'src=\"./' build/index.html --isRegex && cp ./src/electron*.js ./build/ && cp -R ./src/icons ./build/",
    "package:all": "npm run build:electron && electron-packager . --all --out=dist --overwrite --ignore=dist --ignore=src --ignore=public && cd dist && tar -czf phoebe-linux-x64.tar.gz phoebe-linux-x64 && tar -czf phoebe-darwin-x64.tar.gz phoebe-darwin-x64 && zip -r phoebe-win32-x64.zip phoebe-win32-x64",
    "package": "npm run build:electron && electron-packager . --out=dist --overwrite --ignore=dist --ignore=src --ignore=public",
    "package:installer:all": "npm run package:installer:deb64 && npm run package:installer:rpm64 && npm run package:installer:dmg64 && npm run package:installer:exe64 && npm run package:installer:exe32",
    "package:installer:default": "npm run package:installer:deb64 && npm run package:installer:rpm64 && npm run package:installer:exe64 && rm dist/installers/RELEASES && rm dist/installers/*.nupkg",
    "package:installer:deb64": "electron-installer-debian --src dist/phoebe-linux-x64/ --dest dist/installers/ --arch amd64 --icon=public/favicon.png",
    "package:installer:rpm64": "electron-installer-redhat --src dist/phoebe-linux-x64/ --dest dist/installers/ --arch x86_64 --icon=public/favicon.png",
    "package:installer:dmg64": "electron-installer-dmg ./dist/phoebe-darwin-x64/phoebe.app FooBar --out dist/installers/ --icon=public/favicon.png --overwrite",
    "package:installer:exe64": "electron-installer-windows --src dist/phoebe-win32-x64/ --dest dist/installers/",
    "package:installer:exe32": "electron-installer-windows --src dist/phoebe-win32-ia32/ --dest dist/installers/"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
